<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D23.teamQ.controllers.LoginController">
   <children>
      <StackPane prefHeight="900.0" prefWidth="1280.0" style="-fx-background-color: #012d5a;" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fitHeight="900.0" fitWidth="1500.0" opacity="0.65" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../Login-background.jpeg" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="250.0" spacing="312.0" style="-fx-background-color: #f1f1f1;">
         <children>
            <ImageView fitHeight="76.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <image>
                  <Image url="@../../../../../../Text%20Logo.png" />
               </image>
            </ImageView>
            <VBox prefHeight="187.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <TextField fx:id="usernameField" onKeyPressed="#usernameFieldEntered" prefHeight="48.0" prefWidth="230.0" promptText="Username or Email" style="-fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="passwordField" onKeyPressed="#passwordFieldEntered" prefHeight="48.0" prefWidth="170.0" promptText="Password" style="-fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </PasswordField>
                  <Button fx:id="FPButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#FPButtonClicked" prefHeight="20.0" prefWidth="230.0" style="-fx-background-color: #f1f1f1;" styleClass="button-forgot" stylesheets="@styles/Home.css" text="Forgot Password?" underline="true">
                     <font>
                        <Font size="9.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked" prefHeight="48.0" prefWidth="230.0" style="-fx-background-color: #012D5A; -fx-border-radius: 10; -fx-background-radius: 10;" text="Login" textFill="WHITE" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" prefWidth="250.0">
               <children>
                  <Button fx:id="quitButton" alignment="CENTER" mnemonicParsing="false" onAction="#quitButtonClicked" prefHeight="25.0" prefWidth="50.0" style="-fx-background-color: #0f3d99ff;" styleClass="button-login" stylesheets="@styles/Home.css" text="Quit" textFill="WHITE" HBox.hgrow="NEVER" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="12.0" top="12.0" />
         </padding>
      </VBox>
   </children>
</HBox>
